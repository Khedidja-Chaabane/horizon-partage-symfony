{% extends 'base.html.twig' %}

{% block title %}Forum
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		{% if app.user %}
			<a href="{{ path('new_post')}}">Ajouter un Nouveau post</a>
		{% endif %}
		<div class="container">
			{% if post.image %}
				<img src="{{ asset('images/post/' ~ post.image )}}" alt="{{ post.titre }}" class="card-img-top" style="height: 300px; object-fit: cover;">
			{% endif %}
			<div class="mt-3 mb-3">
				<h5 class="text-center">{{ post.titre |capitalize }}</h5>
				<p class="card-text">{{ post.texte |capitalize}}</p>
				<p class="card-text">
					<small class="text-muted">Publié par:
						{{ post.auteur.prenomUser }}</small>
				</p>
				<p class="card-text">
					<small class="text-muted">Publié le
						{{ post.datePublication|date('d/m/Y H:i') }}</small>
				</p>
			</div>
			{# Afficher les boutons Modifier et Supprimer uniquement si l'utilisateur connecté est l'auteur du post #}
			{% if app.user and app.user == post.auteur %}
				<a href="{{ path('update_post', {'id': post.id}) }}" class="btn">Modifier le Post</a>
				<form action="{{ path('delete_post', {'id': post.id}) }}" method="post" onsubmit="return confirm('Souhaitez-vous vraiment supprimer le post {{ post.titre|lower }} ?')">
					<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ post.id) }}">
					<button class="btn p-0">
						<i class="text-danger" data-feather="trash"></i>
						Supprimer
					</button>
				</form>
			{% endif %}
		</div>

	</div>
{% endblock %}
