{% extends 'base.html.twig' %}

{% block title %}Forum
{% endblock %}

{% block body %}

	<div class="container">
		{% if app.user %}
			<a class="btn" href="{{ path('new_post')}}">Ajouter un Nouveau post</a>
		{% endif %}
		{% for post in posts %}
			<div class="card mb-4">
					{% if post.image %}
				<img src="{{ asset('images/post/' ~ post.image )}}" alt="{{ post.titre }}" class="card-img-top" style="height: 300px; object-fit: cover;">
				{% endif %}
				<div class="card-body">
					<h5 class="card-title">{{ post.titre |capitalize }}</h5>
					<p class="card-text">{{ post.texte |capitalize |slice(0, 100) ~ '...' }}</p>
					<p class="card-text">
						<small class="text-muted">Publié par:
							{{ post.auteur.prenomUser }}</small>
					</p>
					<p class="card-text">
						<small class="text-muted">Publié le
							{{ post.datePublication|date('d/m/Y H:i') }}</small>
					</p>
					<div class="card-footer text-center border-0">
						<a href="{{ path('show_post', {'id': post.id}) }}" class="btn">Lire le Post</a>

					</div>
				</div>
			</div>
		{% endfor %}


	</div>
{% endblock %}
