{% extends 'base.html.twig' %}

{% block title %}
	{{ info.titre | capitalize }}
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="{{ asset('styles/info/info.css') }}">
{% endblock %}

{% block body %}
	<div
		class="container my-2">
		<!-- Bouton de retour -->
		<div class="d-flex justify-content-end">
			<a href="{{ path('all_infos') }}" class="btn btn-secondary back mt-3 mb-2">
				<i class="bi bi-arrow-left-square"></i>
				Retour
			</a>
		</div>

		<!-- DÃ©tails de l'info -->
		<div class="row mt-3 mb-3">
			<div class="col-12">
				<h4 class="text-center mt-3 mb-3 ">{{ info.titre | capitalize }}</h4>
				<div class="card mb-3">
					<div
						class="row g-0">
						<!-- Image -->
						{% if info.image %}

							<div class="col-md-4 img-container">
								<img src="{{ asset('images/info/' ~ info.image) }}" alt="{{ info.titre }}" class="img-fluid">
							</div>
						{% endif %}
						<!-- Texte -->
						<div class="col-md-8">
							<div class="card-body">
								<p class="card-text">{{ info.texte | capitalize }}</p>
							</div>

							<!-- Footer de la carte avec les boutons -->
							<div class="card-footer text-center border-0 p-2">
								
								{# {% if is_granted('ROLE_ADMIN') %}
									<div class="mt-3">
										<a class="btn btn-warning" href="{{ path('admin_update_action', {'id': action.id}) }}">
											<i class="bi bi-pencil-square"></i>
											Modifier
										</a>
										<form action="{{ path('admin_delete_action', {'id': action.id}) }}" method="post" onsubmit="return confirm('Souhaitez-vous vraiment supprimer l\'action {{ action.titre | lower }} ?')">
											<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ action.id) }}">
											<button class="btn btn-danger mt-2">
												<i class="bi bi-trash"></i>
												Supprimer
											</button>
										</form>
									</div>
								{% endif %} #}
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
