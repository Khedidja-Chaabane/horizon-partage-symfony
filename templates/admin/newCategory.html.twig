{% extends 'base.html.twig' %}

{% block title %}Nouvelle catégorie
{% endblock %}
{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="{{ asset('styles/forms.css') }}">
{% endblock %}
{% block body %}
	<div class="container">
		<div class="d-flex justify-content-end mt-2 mb-4">
			<a class="btn btn-secondary" href="{{ path('gestion_categories') }}">
				<i class="bi bi-arrow-left-square"></i>
				Retour</a>
		</div>
		<h1 class="text-center mb-4 mt-5">Nouvelle catégorie</h1>


		<div
			class="d-flex justify-content-center mt-2 mb-2 p-2">
			{# Conteneur pour centrer le formulaire #}
			<div class="col-12">
				{{ form_start(newCategoryForm) }}
				{{ form_widget(newCategoryForm) }}
				<button type="submit" class="btn btn-submit w-100 mt-5">Enregistrer</button>
				{{ form_end(newCategoryForm) }}
			</div>
		</div>

	</div>

{% endblock %}
