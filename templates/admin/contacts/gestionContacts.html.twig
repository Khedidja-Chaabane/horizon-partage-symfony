{% extends 'base.html.twig' %}

{% block title %}Messages reçus{% endblock %}

{% block body %}
<div class="container my-4 mt-5">
<div class="d-flex justify-content-end mt-2 mb-4">
			<a class="btn btn-secondary" href="{{ path('app_admin') }}">
				<i class="bi bi-arrow-left-square"></i>
				Retour</a>
		</div>
		<h1 class="mt-3 mb-3 text-center">Messages reçus</h1>          
		{% if contacts is not empty %}
			<table class="table table-striped mt-4">
				<thead>
					<tr>
						<th>Email</th>
						<th>Objet</th>
						<th>Date</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
					{% for contact in contacts %}
						<tr>
							<td>{{ contact.email}}</td>
                            							<td>{{ contact.objet.nom}}</td>

							<td>{{ contact.createdAt | date('d/m/Y') }}</td>
                            
                           
							<td>
												<a href="{{ path('admin_show_message', {'id': contact.id}) }}" class="btn btn-secondary"><i class="bi bi-eye-fill"></i> Afficher</a>

							</td>
							<td>
								{# <a class="btn btn-warning" href="{{ path('admin_update_action', {'id': action.id}) }}"><i class="bi bi-pencil-square"></i> Modifier </a> #}
							</td>
							<td> 
							{# <form action="{{ path('admin_delete_action', {'id': action.id}) }}" method="post" onsubmit="return confirm('Souhaitez-vous vraiment supprimer l\'action {{ action.titre|lower }} ?')">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ action.id) }}">
                <button class="btn btn-danger">
                    <i class="bi bi-trash"></i> Supprimer 
                </button>
            </form> #}
			</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		{% endif %}
   
{% endblock %}
