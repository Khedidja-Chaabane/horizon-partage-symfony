{% extends 'base.html.twig' %}

{% block title %}Modifier la catégorie " {{category.nom}} "
{% endblock %}
{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="{{ asset('styles/forms.css') }}">
{% endblock %}
{% block body %}
	<div class="container">
		<div class="d-flex justify-content-end mt-2 mb-4">
			<a class="btn btn-secondary" href="{{ path('gestion_categories') }}">
				<i class="bi bi-arrow-left-square"></i>
				Retour</a>
		</div>
		<h1 class="text-center mb-4 mt-5">Modifier la catégorie " {{category.nom}} "</h1>
<div class="d-flex justify-content-end mt-3 mb-3">
			<form action="{{ path('admin_delete_category', {'id': category.id}) }}" method="post" onsubmit="return confirm('Souhaitez-vous vraiment supprimer la catégorie {{ category.nom|lower }} ?')">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
                <button class="btn btn-danger">
                    <i class="bi bi-trash"></i> Supprimer ? 
                </button>
            </form> 
		</div>

		<div
			class="d-flex justify-content-center mt-2 mb-2 p-2">
			{# Conteneur pour centrer le formulaire #}
			<div class="col-12">
				{{ form_start(updateCategoryForm) }}
				{{ form_widget(updateCategoryForm) }}
				<button type="submit" class="btn btn-submit w-100 mt-5">Enregistrer</button>
				{{ form_end(updateCategoryForm) }}
			</div>
		</div>

	</div>

{% endblock %}
