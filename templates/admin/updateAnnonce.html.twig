{% extends 'base.html.twig' %}

{% block title %}Modifier l'annonce {{annonce.titre}}{% endblock %}

{% block body %}

<div class="example-wrapper">
    <h1>Modifier l'annonce {{annonce.titre}}</h1>

    {{ form_start(updateAnnonceForm) }}
    {{ form_widget(updateAnnonceForm) }}
    <button type="submit">Sauvegarder</button>
{{ form_end(updateAnnonceForm) }}
<form action="{{ path('admin_delete_annonce', {'id': annonce.id}) }}" method="post" onsubmit="return confirm('Souhaitez-vous vraiment supprimer l\'annonce {{ annonce.titre|lower }} ?')">
																	<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ annonce.id) }}">
																	<button class="btn btn-danger">
																		<i class="bi bi-trash"></i>
																		Supprimer
																	</button>
																</form>
</div>
{% endblock %}
